<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd




        http://code.alibabatech.com/schema/dubbo
        http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

    <dubbo:application name="demo-test" organization="smartdata360" version="1.0"/>

    <!-- Dubbo注册地址 -->
    <dubbo:registry id="container" protocol="nacos"
                    address="${registry.nacos.address}" group="v1.2"
                    username="${registry.nacos.username}"
                    password="${registry.nacos.password}"/>

    <!--服务提供者配置-->
    <dubbo:provider registry="container" timeout="60000" cluster="failfast" retries="2" loadbalance="random" group="v1.2"/>

    <!--服务提供者配置-->
    <dubbo:protocol name="rest" contextpath="risk/test" port="9151" threads="500" server="tomcat" accepts="500"/>

    <!--暴露服务-->
    <dubbo:service group="v1.2" interface="com.example.demo.api.service.TestService"
                   protocol="rest" ref="testService"  validation="true" />
</beans>